<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rojo">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logo"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/retos"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:layout_below="@id/barra"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/cuadro1"
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:background="@drawable/carrusel_1"
            android:backgroundTint="@color/rosadito"
            android:padding="20dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/fondo"
                android:layout_width="180dp"
                android:layout_height="300dp"
                android:layout_toEndOf="@id/medalla1"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="-20dp"
                android:alpha="0.25"
                android:layout_marginTop="-20dp"
                app:srcCompat="@drawable/pista"
                android:layout_marginBottom="-20dp"/>

            <ImageView
                android:id="@+id/medalla1"
                android:layout_width="150dp"
                android:layout_height="300dp"
                app:srcCompat="@drawable/medalla"/>

            <TextView
                android:id="@+id/contexto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorre tus primeros 15 Km"
                android:textSize="22dp"
                android:layout_toEndOf="@id/medalla1"
                android:layout_marginStart="30dp"
                android:layout_below="@id/reto1"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/reto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RETO"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_toEndOf="@id/medalla1"
                android:layout_marginStart="30dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/crear_ruta"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:layout_below="@id/retos"
        android:background="@color/white"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="230dp"
            android:background="@drawable/carrusel_1"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/curuba">

            <ImageView
                android:id="@+id/rutafondo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ruta"
                android:alpha="0.25"/>

            <TextView
                android:id="@+id/tit_crear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREAR RUTA"
                android:textColor="@color/morado_oscuro"
                android:textStyle="bold"
                android:textSize="55dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/perfil"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:background="@color/white"
        android:layout_below="@id/crear_ruta"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="200dp"
            android:background="@drawable/carrusel_1"
            android:backgroundTint="@color/rosadito"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/usuario_de_perfil"
                android:alpha="0.25"/>

            <TextView
                android:id="@+id/tit_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi perfil"
                android:textColor="@color/morado_oscuro"
                android:textStyle="bold"
                android:textSize="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_prin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/rojo"
        android:layout_below="@id/perfil">

        <ImageView
            android:id="@+id/casa"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="25dp"
            app:srcCompat="@drawable/casa_silueta_negra_sin_puerta" />

        <ImageView
            android:id="@+id/bici"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bicicleta"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/casa"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/grupo__2_"
            android:padding="15dp"
            android:layout_toRightOf="@id/bici"/>
    </RelativeLayout>

</RelativeLayout>