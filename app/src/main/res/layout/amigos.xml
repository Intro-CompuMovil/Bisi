<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rojo">

        <ImageView
            android:id="@+id/simbolo1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logo"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buscar"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:layout_below="@id/barra"
        android:background="@color/white">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mis_amigos"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:background="@color/morado"
        android:layout_below="@id/buscar">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_prin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/rojo"
        android:layout_below="@id/mis_amigos">

        <ImageView
            android:id="@+id/casa"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginRight="25dp"
            app:srcCompat="@drawable/casa_silueta_negra_sin_puerta" />

        <ImageView
            android:id="@+id/bici"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bicicleta"
            android:padding="15dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/casa"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/grupo__2_"
            android:padding="15dp"
            android:layout_toRightOf="@id/bici"/>
    </RelativeLayout>

</RelativeLayout>